<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/home_page_bg"
    tools:context="com.hortashorchatas.foodcrumbs.Main_Menu_Activity" >

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:layout_marginLeft="3dp"
        android:padding="0dp"
        android:contentDescription="@string/profile_pic_des" />
    
    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" 
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:text=""
        android:color="#FFFFFF" />

	<Button
        android:id="@+id/directions_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/favorites_button"
        android:layout_marginBottom = "15dp"
        android:contentDescription="@string/directions_button_des"
	    android:background="@drawable/fc_map"
	    android:onClick="toMapView"/>
    	    
    <Button
        android:id="@+id/favorites_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/random_button"
        android:layout_marginBottom = "15dp"
        android:contentDescription="@string/favorites_button_des"
	    android:background="@drawable/fc_favorites"
	    android:onClick="toFavoritesView"/>
    
    <Button
        android:id="@+id/random_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom = "15dp"
        android:contentDescription="@string/random_button_des"
	    android:background="@drawable/fc_random"
	    android:onClick="toRandomGenView"/>

</RelativeLayout>
