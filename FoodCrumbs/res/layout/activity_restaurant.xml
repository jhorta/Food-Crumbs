<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/restaurant_page"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RestaurantActivity" >
  
    <TextView
        android:id="@+id/restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/str_restaurant_name_placeholder"
		android:textSize="36sp"/>

    
    <ImageView
        android:id="@+id/restaurant_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/restaurant_name"
        android:contentDescription="@string/str_restaurant_img"
        android:src="@drawable/restaurant_img" />
    
    <TextView
        android:id="@+id/restaurant_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/restaurant_name"
        android:layout_marginTop="5dp"
        android:maxWidth="150dp"
        android:text="@string/str_restaruant_address_placeholder"
        android:textAppearance="?android:attr/textAppearanceMedium"  />

    <Spinner
        android:id="@+id/restaurant_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/restaurant_address"
        android:layout_marginTop="5dp" />

    <ImageView
        android:id="@+id/restaurant_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/restaurant_picture"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:contentDescription="@string/str_restaurant_img"
        android:clickable="true"
        android:src="@drawable/ic_not_favorite" />

    <TextView
        android:id="@+id/restaurant_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/restaurant_hours"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:textAppearance="?android:attr/textAppearanceMedium"        
        android:text="@string/str_restaurant_phone_number_placeholder" />

    <TextView
        android:id="@+id/restaurant_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/restaurant_favorite"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="@string/str_restaurant_rating" />

    <TextView
        android:id="@+id/restaurant_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/restaurant_phone_number"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"  
        android:text="@string/str_restaurant_website_placeholder" />

    <Button
        android:id="@+id/dishes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/restaurant_rating"
        android:text="@string/str_restaurant_dishes_placeholder" />

    <TextView
        android:id="@+id/best_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/str_restaurant_best_review_placeholder" />

    <TextView
        android:id="@+id/worst_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/str_restaurant_best_review_placeholder" />

</RelativeLayout>