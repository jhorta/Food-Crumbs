<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/dish_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/dish_name_text_label"
        android:ems="10"
        android:inputType="text"
        android:hint="Dish Name" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/dish_name_text_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dish_name_text"
        android:layout_alignParentLeft="true"
        android:text="Enter Dish Name" />

    <EditText
        android:id="@+id/dish_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dish_name_text"
       	android:layout_toRightOf="@+id/dish_rating_label"
        android:ems="10"
        android:hint="Dish Rating"
        android:inputType="numberDecimal" />
    
    <TextView
        android:id="@+id/dish_rating_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dish_rating"
        android:layout_alignParentLeft="true"
        android:text="Enter Dish Rating" />

 	<EditText
        android:id="@+id/dish_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_toRightOf="@+id/dish_price_label"
        android:layout_below="@+id/dish_rating"
        android:ems="10"
        android:hint="Dish Price"
        android:inputType="numberDecimal" />
    
    <TextView
        android:id="@+id/dish_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dish_price"
        android:layout_alignParentLeft="true"
        android:text="Enter Dish Price" />
    <Button
        android:id="@+id/done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dish_price"
        android:layout_centerHorizontal="true"
        android:text="@string/str_done" />

</RelativeLayout>